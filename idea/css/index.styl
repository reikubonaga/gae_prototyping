@charset "UTF-8"

@import '../../stylus/lib/reset'
@import '../../stylus/lib/func'

body
  font-family helvetica

#header-wrap
  position fixed
  background grey
  width 100%
  height 30px
  #logo
    float left
    padding-top 10px
    padding-left 15px
    width 100px
    height 30px
    cursor pointer
  a
    color white
    text-decoration none
  .menu
    ul
      li
        list-style-type none
        color white
        background red
        width 80px
        float left
        text-align center
        padding-top 8px
        padding-bottom 4px
        cursor pointer
      li.clearfix
        width 0px
#content-left-wrap
  position fixed
  padding 30px 15px 15px 15px
  width 50%
  .title
    font-size 16px
    height 30px
    text-align center
    cursor pointer
    font-weight bold
  .ans
    font-size 16px
    height 20px
    padding-bottom 5px
    color grey
  .ans1
    font-weight bold
  .words
    height 100px
  textarea
    width 100%
    height 300px
    padding 5px 7px
  .foot
    padding-top 7px
    vertical-align bottom
    text-align right
    .button
      font-size 14px
      background red
      color white
      padding 5px 15px 5px 15px
      margin-left 10px
      cursor pointer      
    .delete
      font-size 8px
      background grey

#content-right-wrap
  width 45%
  padding 0px 5px 15px 15px
  margin-left 52%
  #search_bar
    margin-top 12px
    padding-top 26px
    padding-bottom 20px
    position fixed
    background white
    width 45%
    input
      margin-left 3%
      width 60%
      height 30px
      font-size 20px
      float left
      padding 0px 7px
    span
      width 50px
      background red
      color white
      padding 5px 15px
      cursor pointer
      float left
      display block
      margin-left 2%
      margin-top 3px
      text-align center
    span.new
      font-size 8px
      background grey
      padding 3px 7px
  #search_list_input
    position fixed
    opacity 0
  #search_list
    margin-top 79px

.data
  .title
    .selecter
      float left
      width 3%
      font-size 10px
      div
        width 50px
        height 30px
        padding-top 5px
    font-weight bold
    .edit
      cursor pointer
    span.button
      font-size 10px
      background red
      color white
      padding 2px 3px
      margin-left 3px
      cursor pointer
  .ans
    padding-left 5%
    color grey
    cursor pointer
.show-list
  .word
    display inline-block
    margin-top 5px
    margin-right 5px
    border-bottom solid 1px grey
    color grey
    padding 0px
    font-size 7px
  a
    padding 3px 5px
    margin-right 5px
    font-size 7px      
  .word.sub
    background yellow
    color black
    padding 3px 5px 0px 5px
    border-bottom none
  .word.l1
    border-bottom solid 1px silver
    color silver
    margin-left 20px
  .word.l2
    border-bottom solid 1px silver
    color silver
    margin-left 40px
  .word.l3
    border-bottom solid 1px silver
    color silver
    margin-left 60px
  .word.flow
    border-bottom none
    div
      display inline-block
      padding 2px 7px 2px 7px