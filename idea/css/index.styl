@charset "UTF-8"

@import '../../stylus/lib/reset'
@import '../../stylus/lib/func'

body
  font-family helvetica

lightred = #E84D47

#header-wrap
  position fixed
  background grey
  width 100%
  height 30px
  #logo
    float left
    padding-top 10px
    padding-left 15px
    width 100px
    height 30px
    cursor pointer
  a
    color white
    text-decoration none
  .menu
    ul
      li
        list-style-type none
        color white
        background red
        width 80px
        float left
        text-align center
        padding-top 8px
        padding-bottom 4px
        cursor pointer
      li.clearfix
        width 0px

#content-left-wrap
  position fixed
  padding 30px 15px 15px 15px
  width 50%
  .title
    font-size 16px
    height 30px
    text-align center
    cursor pointer
    font-weight bold
    margin-bottom 20px  
  .ans
    font-size 16px
    height 20px
    padding-bottom 5px
    color grey
  .words
    height 100px
  textarea
    width 100%
    height 300px
    padding 5px 7px
  .foot
    padding-top 7px
    vertical-align bottom
    text-align right
    font-size 14px
    color red
    .button
      font-size 14px
      background red
      color white
      padding 5px 15px 5px 15px
      margin-left 10px
      cursor pointer      
    .delete
      font-size 8px
      background grey

#content-right-wrap
  width 45%
  padding 0px 5px 15px 15px
  margin-left 52%
  #search_bar
    margin-top 12px
    padding-top 26px
    padding-bottom 20px
    position fixed
    background white
    width 45%
    input
      margin-left 3%
      width 60%
      height 30px
      font-size 20px
      float left
      padding 0px 7px
    span
      width 50px
      background red
      color white
      padding 5px 15px
      float left
      display block
      margin-left 2%
      margin-top 3px
      text-align center
    span.new
      font-size 8px
      background grey
      padding 3px 7px
  #search_list_input
    position fixed
    opacity 0
  #search_list
    margin-top 79px

.data
  .title
    .selecter
      float left
      width 3%
      font-size 10px
      div
        width 50px
        height 30px
        padding-top 5px
    font-weight bold
    .edit
      cursor pointer
    span.delete
      display none
    span.button
      font-size 10px
      background red
      color white
      padding 0px 5px
      margin-left 3px
      cursor pointer
      line-height 18px
  .title:hover
    span.delete
      display inline-block
  .ans
    padding-left 5%
    color grey

.show-list
  .word
    display inline-block
    margin-top 5px
    margin-right 5px
    border-bottom solid 1px grey
    color black
    padding 0px
    font-size 12px
  a
    padding 3px 5px
    margin-right 5px
  .word.sub
    background yellow
    color black
    padding 3px 5px 0px 5px
    border-bottom none
  .word.l1
    border-bottom solid 1px silver
    color black
    margin-left 20px
  .word.l2
    border-bottom solid 1px silver
    color black
    margin-left 40px
  .word.l3
    border-bottom solid 1px silver
    color black
    margin-left 60px
  .word.flow
    border-bottom none
    div
      display inline-block
      padding 2px
  .word.tags
    border-bottom none
    div
      display inline-block
      padding 2px 5px
    div.tag
      font-size 10px
      background lightred
      color white
    div.space
      width 5px
  .matrix
    margin 5px
    font-size 8px
    position relative
    table
      width 100%
      border-spacing 0px
    table,td
      border 1px lightred solid
    td
      padding 1px 2px
      width 50%
    .word
      border-bottom none
    .tag
      color red
      font-weight bold
  .axis
    display block
    padding-top 30px
    padding-left 56px
    padding-right 56px
    div
      width 100%
      margin 0px
      position relative
      .box
        float left
        width 49%
        min-height 30px
      .box0
        border-right 2px lightred solid
      .box2
        border-top 2px lightred solid
        border-right 2px lightred solid
      .box3
        border-top 2px lightred solid
      .word
        border none
        margin-top 3px
      .tag
        position absolute
        background lightred
        color white
        width 50px
        text-align center
        height 16px
        line-height 16px
        font-size 12px
      .tag1
        display inline-block
        top -20px
        left -26px
      .tag2
        display inline-block
        top -8px
        left -56px
      .tag3
        display inline-block
        top -8px
        right -56px
      .tag4_box
        padding-top 2px
        padding-bottom 10px
        left 49%
        .tag4
          left -26px

    .clearfix
      display block