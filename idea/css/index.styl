@charset "UTF-8"

@import '../../stylus/lib/reset'
@import '../../stylus/lib/func'

body
  font-family helvetica

#header-wrap
  position fixed
  background grey
  width 100%
  height 30px
  #logo
    float left
    padding-top 10px
    padding-left 15px
    width 100px
    height 30px
    cursor pointer
  a
    color white
    text-decoration none
  .menu
    ul
      li
        list-style-type none
        color white
        background red
        width 80px
        float left
        text-align center
        padding-top 8px
        padding-bottom 4px
        cursor pointer
      li.clearfix
        width 0px
#content-left-wrap
  position fixed
  padding 30px 15px 15px 15px
  width 50%
  .title
    font-size 16px
    height 30px
    text-align center
    cursor pointer
    font-weight bold
  .ans
    font-size 16px
    height 20px
    padding-bottom 5px
    color grey
  .ans1
    font-weight bold
  textarea
    width 100%
    height 300px
  .foot
    padding-top 7px
    vertical-align bottom
    text-align right
    .button
      font-size 14px
      background red
      color white
      padding 5px 15px 5px 15px
      margin-left 10px
      cursor pointer      
    .delete
      font-size 8px
      background grey

#content-right-wrap
  width 45%
  padding 30px 15px 15px 15px
  margin-left 53%
  #search_bar
    padding-bottom 20px
    input
      margin-left 2%
      width 60%
      height 30px
      font-size 20px
    span
      width 18%
      background red
      color white
      padding 5px 15px
      cursor pointer
      margin-left 2%
    span.new
      font-size 8px
      background grey
      padding 3px 7px

.data
  .title
    font-weight bold
    .edit
      cursor pointer
    span.button
      font-size 10px
      background red
      color white
      padding 2px 3px
      margin-left 3px
      cursor pointer
  .ans
    padding-left 20px
    color grey
    cursor pointer
  .show-list
    .word
      background grey
      color white
      margin-right 5px
      font-size 7px
      padding 3px 5px