@charset "UTF-8"

@import '__reset__'
@import '__func__'

a
  //color #30a0ca
  text-decoration none

a:hover
  color #19558d
  //text-decoration underline

li
  list-style-type none
  list-style-image none

body
  font-family helvetica
  font-size 13px
  line-height 1.618
  font-weight normal
  text-align left
  color #333
  word-wrap break-word

#header
  width 90%
#header-main
  width 90%

#header-wrap
  position fixed
  top 0px
  left 0px
  background-color #E6E6E6
  z-index 1000
  border-bottom-image url(../img/border.png)
  //border-top dotted 2px #868686
  //border-bottom dotted gn(13) #868686
  border-top dotted 2px #BDBDBD
  border-bottom dotted gn(13) #BDBDBD
  width 100%

#header
  //edit
  width 90%
  margin:auto
  height gn(7)
  z-index 1000

#header h1#logo
  float left
  display inline
  height gn(7)
  vertical-align bottom

#logo img
  height 22px
  margin-top gn(10)

#header h1#logo a:hover span
  opacity 0.8

#header-main
  position fixed
  top gn(7)+gn(13)
  left 0px
  z-index 999
  box-shadow 0 0px #ddd

#header-menu-wrap
  position fixed
  top gn(7)
  left 0px
  z-index 999
  box-shadow 0 0px #ddd
  width:100%

#header-menu
  width:90%
  margin-top:gn(9)
  margin-bottom:gn(9)
  margin-left:5%
  margin-right:auto
  height:gn(8)
  position:relative

#header-menu ul
  position absolute

#header-menu-left
  left 0px

#header-menu-right
  right 0px

#header-menu li
  display inline-block  
  *display inline
  *zoom 1
  height gn(8)
  padding-left gn(10)*2

#header-menu li.icon
  padding-left gn(11)

#header-menu li img
  height 25px

#menu-main li
  display inline-block
  *display inline
  *zoom 1
  padding gn(13) gn(10)

#menu-main li a
  color #5b5b5b

#menu-main li a:hover
  color #333

#menu-main li.current a
  color #2b2b2b !important
  font-weight bold
  text-decoration none

#menu-sub
  float right

#menu-sub li
  float left
  display inline

#menu-sub li#is_login.last
  position relative
  min-width gn(4)

#menu-sub li a
  text-decoration none
  height gn(7)
  line-height gn(7)
  padding 0 gn(9)
  display block

#menu-sub li a:hover
  background #2b2b2b

#menu-sub li a
  color #000
  text-shadow 0px -1px 0px rgba(0, 0, 0, 0.5)

#menu-sub li a:hover
  color #fff
  text-shadow 0px 1px 0px rgba(0, 0, 0, 0.8)

#menu-sub li.last a img.thumbnail
  position relative
  top -1px
  height gn(7) - 2*gn(12)
  width gn(7) - 2*gn(12)
  padding gn(12)
  margin-right gn(13)
  vertical-align middle

#content-wrap
  top:gn(5)
  position:absolute

.project
  position absolute
.project .thumbnail-wrap
  -moz-box-shadow 5px 5px 1px #9E9E9C,-1px -1px 3px #9E9E9C
  -webkit-box-shadow 5px 5px 1px #9E9E9C,-1px -1px 3px #9E9E9C
  position relative
.project .title-wrap
  margin-top 5px
  margin-left 7px
  font-family:'ヒラギノ角ゴ Pro W3','Hiragino Kaku Gothic Pro','メイリオ',Meiryo,'ＭＳ Ｐゴシック',sans-serif;