  *zoom 1



// gradient template

// dff0b1 c3dd82 87c442 5bc73e
gradient-green(f=#dff0b1, t=#c3dd82, n=0.72) // from , to, num
  background t
  background -moz-linear-gradient(top, f, t n*100%, t)
  background -webkit-gradient(linear, left top, left bottom, from(f), color-stop(n, t), to(t))
  background -o-linear-gradient(top, f, t n*100%, t)
  background -ms-linear-gradient(top, f, t n*100%, t)
  background linear-gradient(top, f, t n*100%, t)


