gn(n, r=0) // golden-num
  if n==0
    970+r px
  else if n==1
    600+r px
  else if n==2
    370+r px
  else if n==3
    230+r px
  else if n==4
    141+r px
  else if n==5
    87+r px
  else if n==6
    54+r px
  else if n==7
    33+r px
  else if n==8
    21+r px
  else if n==9
    13+r px
  else if n==10
    8+r px
  else if n==11
    5+r px
  else if n==12
    3+r px
  else if n==13
    2+r px
  else if n==14
    1+r px
  else
    0 px

