@charset "UTF-8"

@import '__reset__'
@import '__func__'

a
  color #30a0ca
  text-decoration none

a:hover
  color #19558d
  text-decoration underline

li
  list-style-type none
  list-style-image none

body
  font-family helvetica
  font-size 13px
  line-height 1.618
  font-weight normal
  text-align left
  color #333
  word-wrap break-word

#header-wrap
  position fixed
  top 0px
  left 0px
  width 100%
  //width 1438px - gn(3) + gn(8)
  background #4b4b4b url(../img/header-bg.png) left center repeat-x
  z-index 1000
  border-bottom solid 2px #30a0ca
#header
  //edit
  width 90%
  margin:auto
  height gn(7)
  z-index 1000
#header h1#logo
  float left
  display inline
  border-right solid 1px #4b4b4b

#header h1#logo a span
  display block
  width gn(4)
  height gn(7)
  background url(../img/logo.png) left center no-repeat
  color #fff
  text-indent -9999px

#header h1#logo a:hover span
  opacity 0.8


#header-main
  position fixed
  top gn(7)
  left 0px
  width 100%
  //width 1438px - gn(3) + gn(8)
  background #eee
  z-index 999
  text-align center
  border-top solid 2px #2b2b2b
  border-bottom solid 1px #bbb
  box-shadow 0 1px #ddd

#menu-main
  border-top solid 1px #fff

#menu-main li
  display inline-block
  *display inline
  *zoom 1
  padding gn(13) gn(10)

#menu-main li a
  color #5b5b5b

#menu-main li a:hover
  color #333

#menu-main li.current a
  color #2b2b2b !important
  font-weight bold
  text-decoration none

#menu-sub
  float right

#menu-sub li
  float left
  display inline

#menu-sub li#is_login.last
  position relative
  min-width gn(4)


#menu-sub li a
  text-decoration none
  height gn(7)
  line-height gn(7)
  padding 0 gn(9)
  display block
  border-left solid 1px #2b2b2b

#menu-sub li a:hover
  background #2b2b2b

#menu-sub li a
  color #ccc
  text-shadow 0px -1px 0px rgba(0, 0, 0, 0.5)

#menu-sub li.last a
  border-right solid 1px #2b2b2b

#menu-sub li a:hover
  color #fff
  text-shadow 0px 1px 0px rgba(0, 0, 0, 0.8)

#menu-sub li.last a img.thumbnail
  position relative
  top -1px
  height gn(7) - 2*gn(12)
  width gn(7) - 2*gn(12)
  padding gn(12)
  margin-right gn(13)
  vertical-align middle

